<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="repeate_row">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">17dp</item>
        <item name="android:layout_marginHorizontal">13dp</item>
        <item name="android:layout_marginVertical">3dp</item>
    </style>
    <style name="repeate_row_image">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="repeate_row_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">16</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="repeate_row_text_customize">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FullScreenDialog" parent="android:Theme.Dialog">
        <!-- 窗口设为无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 窗口浮现在activity之上 -->
        <item name="android:windowIsFloating">false</item>
        <!-- 背景透明 -->
        <item name="android:windowBackground">@color/title_transparent_black</item>
        <!-- 背景模糊 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 全屏 -->
        <item name="android:windowFullscreen">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="horizontal_line_style">
        <item name="android:background">@color/line_and_outline_grey</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.4dp</item>
    </style>
    <style name="Theme_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>
</resources>